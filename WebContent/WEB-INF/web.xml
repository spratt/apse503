<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>apse503</display-name>
	<servlet>
		<description>The dispatcher for requests on the user model.</description>
		<display-name>UserController</display-name>
		<servlet-name>UserController</servlet-name>
		<servlet-class>apse503.UserController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UserController</servlet-name>
		<url-pattern>/user/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<description>The signup view for the user model.</description>
		<display-name>SignUpView</display-name>
		<servlet-name>SignUpView</servlet-name>
		<jsp-file>/signup.jsp</jsp-file>
	</servlet>
	<servlet>
		<description>The login view for the user model.</description>
		<display-name>LoginView</display-name>
		<servlet-name>LoginView</servlet-name>
		<jsp-file>/login.jsp</jsp-file>
	</servlet>
	<servlet>
		<description>The generic home view.</description>
		<display-name>HomeView</display-name>
		<servlet-name>HomeView</servlet-name>
		<jsp-file>/home.jsp</jsp-file>
	</servlet>
	<welcome-file-list>
		<welcome-file>home.jsp</welcome-file>
	</welcome-file-list>  
	<resource-ref>
      <description>DB Connection</description>
      <res-ref-name>jdbc/DB</res-ref-name>
      <res-type>javax.sql.DataSource</res-type>
      <res-auth>Container</res-auth>
	</resource-ref>
</web-app>
